<UserControl x:Class="pr18_elik.Element.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pr18_elik.Element"
             mc:Ignorable="d">
    <Grid Height="138">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="Auto" MinHeight="0"/>
        </Grid.RowDefinitions>

        <!-- ШАПКА -->

        <!-- КАРТОЧКА РЕЙСА -->
        <Border Background="#EAEAEA" 
                CornerRadius="8" 
                Padding="20" 
                Margin="0,0,0,-84" 
                MaxWidth="800" 
                HorizontalAlignment="Center" Width="800" Grid.RowSpan="3" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <!-- Цена -->
                    <ColumnDefinition Width="*"/>
                    <!-- Маршрут -->
                    <ColumnDefinition Width="150"/>
                    <!-- Пусто / доп. инфо -->
                </Grid.ColumnDefinitions>

                <!-- ЛЕВО: цена + кнопка -->
                <StackPanel Grid.Column="0" VerticalAlignment="Top">
                    <TextBox Text="1999 ₽" x:Name="lPrice" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                    <Button Content="Подробнее" 
                            Background="#FF4000" 
                            Foreground="White" 
                            Height="25" 
                            Margin="0,10,0,0"/>
                </StackPanel>
                <Grid Grid.Column="1" Grid.ColumnSpan="2" Margin="25,0,10,0">
                    <!-- Отправление -->
                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                        <TextBox Text="Победа" FontSize="14" Foreground="Gray"/>
                        <TextBox x:Name="fromTime" Text="05:00" FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        <TextBox x:Name="from" Text="Пермь" FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        <TextBox x:Name="fromDate" Text="09.12.2023" FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Прибытие -->
                    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,-10,0">
                        <TextBox Text="Победа" FontSize="14" Foreground="Gray"/>
                        <TextBox x:Name="toTime" Text="05:00" FontSize="16" FontWeight="SemiBold" Margin="0,4,0,0"/>
                        <TextBox x:Name="to" Text="Пермь" FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                        <TextBox x:Name="toDate" Text="09.12.2023" FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Горизонтальная линия -->
                    <Rectangle Height="2" Fill="Gray" VerticalAlignment="Top" Margin="74,61,93,0"/>
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <TextBox Text="✈️" FontSize="16"/>
                        <TextBox Text="в пути 2 часа 55 минут" 
                                   FontSize="12" x:Name="way"
                                   Foreground="Gray" 
                                   Margin="8,0"/>
                        <TextBox Text="✈️" FontSize="16">
                            <TextBox.LayoutTransform>
                                <ScaleTransform ScaleX="-1"/>
                            </TextBox.LayoutTransform>
                        </TextBox>
                    </StackPanel>
                </Grid>

                <!-- ПРАВО: можно оставить пустым или использовать под что-то -->
            </Grid>
        </Border>
    </Grid>
</UserControl>
